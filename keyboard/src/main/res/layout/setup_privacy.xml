<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/setup_welcome_video_top_padding"
        android:paddingBottom="@dimen/setup_welcome_video_bottom_padding">

        <Button
            android:id="@+id/bt_read_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/read_privacy_policy"
            android:theme="@style/MyButton"
            android:background="@drawable/bt_start_bg_selector_privacy"
            android:textColor="@drawable/bt_text_selector_privacy"/>

        <CheckBox
            android:id="@+id/bt_privacy_policy_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="@string/i_have_read_and_agree_to_the_privacy_policy"
            android:theme="@style/MyCheckBox" />

        <Button
            android:id="@+id/bt_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/proceed"
            android:theme="@style/MyButton"
            android:enabled="false"
            android:alpha="0.9"
            android:background="@drawable/bt_start_bg_selector_privacy"
            android:textColor="@drawable/bt_text_selector_privacy"/>

<!--        <pt.lasige.ideafast.study.inputmethod.latin.setup.SetupStartIndicatorView-->
<!--            android:id="@+id/bt_startSetup"-->
<!--            android:enabled="false"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->

    </LinearLayout>
</merge>
