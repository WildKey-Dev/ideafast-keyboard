# Keep classes and methods that have the @UsedForTesting annotation
-keep @pt.lasige.inputmethod.annotations.UsedForTesting class *
-keepclassmembers class * {
    @pt.lasige.inputmethod.annotations.UsedForTesting *;
}

# Keep classes and methods that have the @ExternallyReferenced annotation
-keep @pt.lasige.inputmethod.annotations.ExternallyReferenced class *
-keepclassmembers class * {
    @pt.lasige.inputmethod.annotations.ExternallyReferenced *;
}

# Keep native methods
-keepclassmembers class * {
    native <methods>;
}

# Keep classes that are used as a parameter type of methods that are also marked as keep
# to preserve changing those methods' signature.
-keep class pt.lasige.inputmethod.latin.AssetFileAddress
-keep class pt.lasige.inputmethod.latin.Dictionary
-keep class pt.lasige.inputmethod.latin.NgramContext
-keep class pt.lasige.inputmethod.latin.makedict.ProbabilityInfo
-keep class pt.lasige.inputmethod.latin.utils.LanguageModelParam

# TODO: remove once used in code.
-keep class pt.lasige.inputmethod.keyboard.KeyboardLayout { *; }

